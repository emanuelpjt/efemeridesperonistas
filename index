                    <i class="fas fa-star"></i> Efeméride de Hoy
                </button>
            </div>
            
            <section id="calendar" class="section active">
                <div class="loading" id="calendar-loading">
                    <i class="fas fa-spinner fa-spin"></i> Cargando efemérides...
                </div>
                <div id="calendar-content" style="display: none;">
                    <!-- El calendario se cargará aquí con JavaScript -->
                </div>
            </section>
            
            <section id="today" class="section">
                <div class="today-efemeride">
                    <div class="today-header">
