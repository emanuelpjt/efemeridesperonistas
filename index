    <script>
        // Datos de ejemplo (reemplazar con carga desde CSV)
        const efemeridesData = [
            {
                fecha: "01-01",
                reseña: "1945- Por iniciativa de la Secretaría de Trabajo y Previsión a cargo del Coronel Juan Perón, se amplía la jubilación obligatoria para todos los trabajadores en relación de dependencia.\n1947- Inicio del primer Plan Quinquenal.\n1950- Año del Libertador General San Martín.\n1952- Comienza el año, pasando a poder del Estado la ex Corporación de Transportes de la Ciudad de Buenos Aires.\n1956- Desde Colón (Panamá) Perón establece el primer contacto con la Resistencia y envía instrucciones reservadas.\n1998- Año de los Municipios.\n1999- Año de la Exportación."
            },
            {
                fecha: "02-01",
                reseña: "1949- El Papa Pío XII escribía un mensaje a la señora Eva Perón, bendiciéndola y elogiando 'la caritativa creación e invocando las gracias celestiales sobre su Institución de Ayuda Social, y la labor que realiza'."
            },
            {
                fecha: "05-01",
                reseña: "1950- Por decisión del gobierno es otorgado (por intermedio del Banco de Crédito Industrial) un crédito de 15 millones para la fabricación de maquinaria agrícola."
            },
            {
                fecha: "17-10",
                reseña: "1945- Día de la Lealtad Peronista. Una gran movilización obrera y sindical exige la liberación del Coronel Juan Domingo Perón, quien había sido detenido por el gobierno de facto. Este evento marca el nacimiento del movimiento peronista."
            },
            {
                fecha: "04-06",
                reseña: "1943- La Revolución del 43 derroca al presidente Ramón Castillo. Un grupo de militares nacionalistas toma el poder, entre ellos el entonces coronel Juan Domingo Perón, quien comienza a destacarse desde la Secretaría de Trabajo y Previsión."
            }
        ];

        // Función para mostrar la sección seleccionada
        function showSection(sectionId) {
            // Ocultar todas las secciones
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Mostrar la sección seleccionada
            document.getElementById(sectionId).classList.add('active');
            
            // Si es la sección de hoy, cargar la efeméride del día actual
            if (sectionId === 'today') {
                loadTodaysEfemeride();
            }
        }
        
        // Función para obtener el nombre del mes en español
        function getMonthName(monthIndex) {
            const months = [
                'Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio',
                'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'
            ];
            return months[monthIndex];
        }
        
        // Función para formatear fecha como dd-mm
        function formatDate(date) {
            const day = String(date.getDate()).padStart(2, '0');
            const month = String(date.getMonth() + 1).padStart(2, '0');
            return `${day}-${month}`;
        }
        
        // Función para extraer el título de la reseña (primera línea)
        function extractTitle(resena) {
            // Tomar la primera línea y limitar a 5 palabras como título
            const firstLine = resena.split('\n')[0];
            const words = firstLine.split(' ');
            return words.slice(0, 5).join(' ') + (words.length > 5 ? '...' : '');
        }
        
        // Función para renderizar el calendario
        function renderCalendar() {
            const calendarContent = document.getElementById('calendar-content');
            const calendarLoading = document.getElementById('calendar-loading');
            
            // Organizar efemérides por mes
            const efemeridesPorMes = {};
            efemeridesData.forEach(efemeride => {
                const mes = parseInt(efemeride.fecha.split('-')[1]) - 1; // 0-11
                if (!efemeridesPorMes[mes]) {
                    efemeridesPorMes[mes] = [];
                }
                efemeridesPorMes[mes].push(efemeride);
            });
            
            // Obtener la fecha actual
            const today = new Date();
            const todayFormatted = formatDate(today);
            
            // Generar HTML para cada mes
            let calendarHTML = '';
            
            for (let mes = 0; mes < 12; mes++) {
                if (efemeridesPorMes[mes] && efemeridesPorMes[mes].length > 0) {
                    calendarHTML += `
                        <div class="month-section">
                            <h2 class="month-title">${getMonthName(mes)}</h2>
                            <div class="calendar">
                    `;
                    
                    // Ordenar efemérides por día
                    efemeridesPorMes[mes].sort((a, b) => {
                        return parseInt(a.fecha.split('-')[0]) - parseInt(b.fecha.split('-')[0]);
                    });
                    
                    // Agregar cada efeméride
                    efemeridesPorMes[mes].forEach(efemeride => {
                        const isToday = efemeride.fecha === todayFormatted;
                        const dia = efemeride.fecha.split('-')[0];
                        const titulo = extractTitle(efemeride.reseña);
                        
                        calendarHTML += `
                            <div class="day-card ${isToday ? 'current' : ''}" data-fecha="${efemeride.fecha}">
                                <div class="day-date">${dia} de ${getMonthName(mes)}</div>
                                <div class="day-title">${titulo}</div>
                                <div class="day-description">${efemeride.reseña.substring(0, 150)}...</div>
                            </div>
                        `;
                    });
                    
                    calendarHTML += `
                            </div>
                        </div>
                    `;
                }
            }
            
            calendarContent.innerHTML = calendarHTML;
            calendarLoading.style.display = 'none';
            calendarContent.style.display = 'block';
            
            // Agregar event listeners a las tarjetas
            document.querySelectorAll('.day-card').forEach(card => {
                card.addEventListener('click', () => {
                    const fecha = card.getAttribute('data-fecha');
                    const efemeride = efemeridesData.find(e => e.fecha === fecha);
                    if (efemeride) {
                        showEfemerideDetail(efemeride);
                    }
                });
            });
        }
        
        // Función para mostrar el detalle de una efeméride
        function showEfemerideDetail(efemeride) {
            // Cambiar a la sección de hoy
            showSection('today');
            
            // Actualizar el contenido
            const titulo = extractTitle(efemeride.reseña);
            document.getElementById('today-title').textContent = titulo;
            
            const [day, month] = efemeride.fecha.split('-');
            document.getElementById('today-date').textContent = `${day} de ${getMonthName(parseInt(month) - 1)}`;
            
            // Formatear la reseña con saltos de línea
            const reseñaFormateada = efemeride.reseña.split('\n')
                .map(paragraph => `<p>${paragraph}</p>`)
                .join('');
                
            document.getElementById('today-text').innerHTML = reseñaFormateada;
            
            // Intentar cargar imagen si existe
            const imageContainer = document.getElementById('today-image');
            const imageName = `${efemeride.fecha}.jpg`;
            imageContainer.innerHTML = `
                <div style="text-align: center;">
                    <i class="fas fa-image" style="font-size: 3rem; margin-bottom: 10px;"></i>
                    <p>Imagen ilustrativa</p>
                    <p><small>${imageName}</small></p>
                </div>
            `;
        }
        
        // Función para cargar la efeméride del día actual
        function loadTodaysEfemeride() {
            const today = new Date();
            const todayFormatted = formatDate(today);
            
            // Buscar la efeméride de hoy
            const todaysEfemeride = efemeridesData.find(efemeride => efemeride.fecha === todayFormatted);
            
            if (todaysEfemeride) {
                showEfemerideDetail(todaysEfemeride);
            } else {
                document.getElementById('today-title').textContent = 'No hay efemérides para hoy';
                document.getElementById('today-date').textContent = formatDate(today);
                document.getElementById('today-text').innerHTML = '<p>No se encontraron efemérides para la fecha de hoy.</p>';
                document.getElementById('today-image').innerHTML = 'Imagen no disponible';
            }
        }
        
        // Inicializar la aplicación cuando el DOM esté cargado
        document.addEventListener('DOMContentLoaded', function() {
            // Configurar event listeners para los botones
            document.getElementById('btn-calendar').addEventListener('click', () => showSection('calendar'));
            document.getElementById('btn-today').addEventListener('click', () => showSection('today'));
            
            // Renderizar el calendario
            renderCalendar();
        });

        // NOTA: Para cargar desde un CSV real, puedes usar la biblioteca PapaParse
        // y reemplazar los datos de ejemplo con una llamada a Papa.parse('ruta/al/archivo.csv', ...)
    </script>
</body>
</html>
